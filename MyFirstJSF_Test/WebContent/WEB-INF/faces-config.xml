<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns = "http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2"> <!-- 页面导航 -->
	<navigation-rule>
		<from-view-id>/views/index.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/result.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>   <!-- 管理Beans -->
	
	<managed-bean>
		<managed-bean-name>CalculateBean</managed-bean-name>
		<managed-bean-class>com.zwf.controller.CalculateController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
</faces-config>